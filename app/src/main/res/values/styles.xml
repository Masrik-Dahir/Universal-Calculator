<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#262521</item>
        <item name="colorPrimaryDark">#000</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.MaterialComponents">
        <item name="windowActionModeOverlay">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/statusBar</item>
    </style>

    <style name="Toolbar.ConvertMe" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">@color/toolbar</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="ButtonTextView">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation" tools:targetApi="lollipop">4dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/button_text_size</item>
    </style>

</resources>
